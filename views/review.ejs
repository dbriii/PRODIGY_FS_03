            <form method="post" class="cart-form">
                <p class="item-name"><%= item.p_name %></p>
                <p class="item-price"> â‚¹<%= item.price %></p>
                <p class="item-button mb-0"><button value="<%= item.id %>" name="choice1" type="submit" formaction="/remove" formmethod="post" class="remove-button"><svg xmlns="http://www.w3.org/2000/svg" style="color: #481E14;;" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
