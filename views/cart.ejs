<%- include("partials/header.ejs") %>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/style/main.css" rel="stylesheet">
</head>
<body>
     <div class="cart-container wrapper">
      <% if (locals.item && item.length > 0) { %>
        <h4 class="mb-3" style="color: #481E14;">Your cart : <%=item.length %> </h4>
        <% let totalprice = 0; %> 
        <% item.forEach(item => {  %>
        <div class="cart-item">
            <form method="post" class="cart-form">
                <p class="item-name"><%= item.p_name %></p>
                <p class="item-price"> â‚¹<%= item.price %></p>
                <p class="item-button mb-0"><button value="<%= item.id %>" name="choice1" type="submit" formaction="/remove" formmethod="post" class="remove-button"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-x-circle" viewBox="0 0 16 16">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                </svg>
                </button></p>
            </form>
        </div>  
        <% totalprice += item.price %>  
        <% }); %>

        <hr class="my-2">
        <div class="total-price">
          <h2>Total Price: $<%= totalprice.toFixed(2) %></h2>
        </div>

        <hr class="my-2">

        <form action="/check" method="get"><button type="submit" class="btn btn-primary btn-lg px-4 me-md-2" formaction="/check" formmethod="get" class="remove-button" style="background-color: #2A6049;"> Proceed to Buy</button>      
        
        
      <% } else { %>
        <h6 style="color: #481E14; text-align: center;">cart is empty</h6>
      <% } %>
  
    </div>

      
 
</body>


<%- include("partials/footer.ejs") %>
</html>